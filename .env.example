# ===========================================
# Cursed Tours - Environment Variables
# ===========================================
# Copy this file to .env.local for local development
# Add these same variables to Vercel Environment Variables

# ----- REQUIRED -----

# WordPress backend URL (no trailing slash)
NEXT_PUBLIC_WORDPRESS_URL=https://cursedtours.com

# FaustWP plugin secret (from WordPress: Settings > Faust)
FAUST_SECRET_KEY=your_faust_secret_key_here

# Frontend URL (no trailing slash) - IMPORTANT for sitemaps & canonical URLs
NEXT_PUBLIC_URL=https://cursedtours.com

# ----- OPTIONAL -----

# RTL mode: ltr or rtl
NEXT_PUBLIC_SITE_DIRECTION=ltr

# Show gear/settings icon: true or false
NEXT_PUBLIC_SITE_GEAR_ICON=false

# API method: GET or POST
NEXT_PUBLIC_SITE_API_METHOD=GET

# Google Analytics 4 Measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Additional image hostnames (if using external images)
NEXT_PUBLIC_IMAGE_REMOTE_HOSTNAME_1=i0.wp.com
NEXT_PUBLIC_IMAGE_REMOTE_HOSTNAME_2=i0.wp.com
