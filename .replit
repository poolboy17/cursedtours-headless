NEXT_PUBLIC_IMAGE_REMOTE_HOSTNAME_1 = "i0.wp.com"
NEXT_PUBLIC_IMAGE_REMOTE_HOSTNAME_2 = "i0.wp.com"
PORT = "5000"

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "run", "start"]
build = ["npm", "run", "build"]
